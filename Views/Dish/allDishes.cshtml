@* this foreach loop ensures to display each inputted recipe by users *@
@foreach (Dish eachDish in Model)
{
    <div>
        <a asp-controller="Dish" 
        asp-action="ViewOne" 
        asp-route-DishId="@eachDish.DishId"
        >@eachDish.Name</a> by @eachDish.Chef
    </div>
}